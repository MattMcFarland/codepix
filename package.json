{
  "name": "codepix-server",
  "version": "0.0.3",
  "scripts": {
    "postinstall": "npm run build",
    "dev": "gulp",
    "debug": "npm start",
    "prepublish": "npm test && npm run build",
    "test": "npm run lint && npm run check && mocha $npm_package_options_mocha",
    "testonly": "mocha $npm_package_options_mocha",
    "seed": "mocha $npm_package_options_seed",
    "lint": "eslint src",
    "check": "flow check",
    "build": "rm -rf lib/* && babel src --ignore __tests__ --out-dir lib && npm run copy",
    "copy": "cp -R views lib/views && cp -R src/db/config lib/db/config",
    "iron-watch": "iron-node tasks/iron-watch.js",
    "watch": "babel tasks/watch.js | node",
    "cover": "babel-node node_modules/.bin/isparta cover --root src --report html node_modules/.bin/_mocha -- $npm_package_options_mocha",
    "cover:lcov": "babel-node node_modules/.bin/isparta cover --root src --report lcovonly node_modules/.bin/_mocha -- $npm_package_options_mocha",
    "start": "node --harmony ./lib/bin/server.js",
    "deploy": "npm test && npm run build && pm2 deploy ecosystem.json production"
  },
  "options": {
    "mocha": "--require tasks/mocha-bootload src/**/__tests__/**/*.js",
    "seed": "--require tasks/mocha-bootload sequelize/**/__tests__/**/*.js"
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "babel": "^6.3.26",
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-eslint": "^4.1.6",
    "babel-plugin-transform-flow-strip-types": "^6.3.15",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "body-parser": "~1.13.2",
    "browser-sync": "^2.10.1",
    "chai": "^3.4.1",
    "chai-as-promised": "^5.2.0",
    "chalk": "^1.1.1",
    "chalkline": "0.0.4",
    "chance": "^0.8.0",
    "codepix-client": "0.1.1",
    "compression": "^1.6.0",
    "cookie-parser": "~1.3.5",
    "coveralls": "^2.11.6",
    "eslint": "^1.10.3",
    "express": "~4.13.1",
    "express-graphql": "^0.4.5",
    "express-phantom": "^0.1.2",
    "faker": "^3.0.1",
    "figlet": "^1.1.1",
    "graphql": "^0.4.14",
    "graphql-relay": "^0.3.6",
    "gulp": "^3.9.0",
    "gulp-nodemon": "^2.0.6",
    "hbs": "~3.1.0",
    "highlight.js": "^9.0.0",
    "isparta": "^4.0.0",
    "lodash": "^3.10.1",
    "mocha": "^2.3.4",
    "morgan": "~1.6.1",
    "pg": "^4.4.3",
    "pg-hstore": "^2.3.2",
    "phantom": "^0.8.4",
    "pretty-error": "^2.0.0",
    "sane": "^1.3.0",
    "sequelize": "^3.15.1",
    "sequelize-cli": "^2.2.1",
    "serve-favicon": "~2.3.0",
    "supertest": "^1.1.0",
    "winston": "^2.1.1"
  },
  "description": "Package for the server http://codepix.io",
  "main": "-",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MattMcFarland/codepix-server.git"
  },
  "author": "Matt McFarland",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MattMcFarland/codepix-server/issues"
  },
  "homepage": "https://github.com/MattMcFarland/codepix-server#readme"
}
